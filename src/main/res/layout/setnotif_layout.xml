<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutxx3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/setnotifText2"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/setnotifText3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="date chosen" />

    <Button
        android:id="@+id/setnotifButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="date pick" />

    <TextView
        android:id="@+id/setnotifText4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="date chosen" />

    <Button
        android:id="@+id/setnotifButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="time pick" />

    <Button
        android:id="@+id/setnotifButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="done" />
</LinearLayout>